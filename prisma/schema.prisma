generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String            @id @default(cuid())
  name        String            @unique
  volumeMl    Int // volume total da garrafa (em ml) — para líquidos
  price       Float // preço da garrafa
  unit        String            @default("ml") // "ml", "g", "each"
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  ingredients DrinkIngredient[]
}

model Drink {
  id          String            @id @default(cuid())
  name        String            @unique
  description String?
  ingredients DrinkIngredient[]
  createdAt   DateTime          @default(now())
}

model DrinkIngredient {
  id        String  @id @default(cuid())
  drink     Drink   @relation(fields: [drinkId], references: [id])
  drinkId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  volumeMl  Int // quantidade usada neste drink (em ml). Se unit!="ml", converta conforme unit.

  @@unique([drinkId, productId])
}
